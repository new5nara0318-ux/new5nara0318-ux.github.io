    <script>
        document.body.addEventListener('dblclick', function(event) {
            event.preventDefault();
        });

        document.addEventListener("focusin", function(e) {
            if (e.target.tagName === "INPUT" && e.target.type !== "text" && e.target.type !== "password") {
                setTimeout(() => e.target.blur(), 100);
            }
        });

        const APP_STORAGE_KEY = 'NEWS_APP_STORAGE_KEY';
        window.APP_STORAGE_KEY = APP_STORAGE_KEY;

        let articles = [];
        let users = [];
        let currentUser = null;
        let currentCategory = 'all';
        let currentCategoryTargetInput = null;

        const categories = [
            { id: 'all', name: 'Ï†ÑÏ≤¥ üåç' },
            { id: 'Ï†ïÏπò', name: 'Ï†ïÏπò üèõÔ∏è' },
            { id: 'Í≤ΩÏ†ú', name: 'Í≤ΩÏ†ú üí∞' },
            { id: 'ÏÇ¨Ìöå', name: 'ÏÇ¨Ìöå üë•' },
            { id: 'Î¨∏Ìôî', name: 'Î¨∏Ìôî üé≠' },
            { id: 'IT', name: 'IT üíª' },
            { id: 'Ïä§Ìè¨Ï∏†', name: 'Ïä§Ìè¨Ï∏† üèÖ' }
        ];

        const categoryEmojis = {
            'Ï†ïÏπò': 'üèõÔ∏è', 'Í≤ΩÏ†ú': 'üí∞', 'ÏÇ¨Ìöå': 'üë•', 'Î¨∏Ìôî': 'üé≠', 'IT': 'üíª', 'Ïä§Ìè¨Ï∏†': 'üèÖ', 'all': 'üåç'
        };

        function generateUniqueId() {
            return Date.now().toString(36) + Math.random().toString(36).substr(2);
        }

        function saveData() {
            localStorage.setItem(APP_STORAGE_KEY + '_articles', JSON.stringify(articles));
            localStorage.setItem(APP_STORAGE_KEY + '_users', JSON.stringify(users));
            localStorage.setItem(APP_STORAGE_KEY + '_currentUser', JSON.stringify(currentUser));
        }

        function loadData() {
            const savedArticles = localStorage.getItem(APP_STORAGE_KEY + '_articles');
            const savedUsers = localStorage.getItem(APP_STORAGE_KEY + '_users');
            const savedCurrentUser = localStorage.getItem(APP_STORAGE_KEY + '_currentUser');

            if (savedArticles) {
                articles = JSON.parse(savedArticles);
            } else {
                articles = [
                    { id: generateUniqueId(), category: 'Ï†ïÏπò', title: 'Ïó¨Îãπ, ÏÉà Ï†ïÏ±Ö Î∞úÌëú', content: 'Íµ≠ÌöåÏóêÏÑú ÏÉàÎ°úÏö¥ Í≤ΩÏ†ú ÌôúÏÑ±Ìôî Ï†ïÏ±ÖÏù¥ Î∞úÌëúÎêòÏóàÏäµÎãàÎã§. ÏãúÎØºÎì§Ïùò Í∏∞ÎåÄÍ∞Ä Î™®ÏïÑÏßÄÍ≥† ÏûàÏäµÎãàÎã§.', date: new Date(Date.now() - 86400000 * 2).toISOString(), expanded: false },
                    { id: generateUniqueId(), category: 'Í≤ΩÏ†ú', title: 'Ï£ºÏãù ÏãúÏû•, ÏÉÅÏäπÏÑ∏ ÏßÄÏÜç', content: 'Í∏ÄÎ°úÎ≤å Í≤ΩÏ†ú ÌöåÎ≥µÏóê ÌûòÏûÖÏñ¥ Íµ≠ÎÇ¥ Ï£ºÏãù ÏãúÏû•Ïù¥ Ïó∞Ïùº ÏÉÅÏäπÏÑ∏Î•º Í∏∞Î°ùÌïòÍ≥† ÏûàÏäµÎãàÎã§.', date: new Date(Date.now() - 86400000).toISOString(), expanded: false },
                    { id: generateUniqueId(), category: 'ÏÇ¨Ìöå', title: 'ÌôòÍ≤Ω Î≥¥Ìò∏ Ï∫†ÌéòÏù∏ ÏãúÏûë', content: 'Ï†ÑÍµ≠Ï†ÅÏúºÎ°ú ÌôòÍ≤Ω Î≥¥Ìò∏Î•º ÏúÑÌïú ÎåÄÍ∑úÎ™® Ï∫†ÌéòÏù∏Ïù¥ ÏãúÏûëÎêòÏóàÏäµÎãàÎã§. ÎßéÏùÄ ÏãúÎØºÎì§Ïù¥ Ï∞∏Ïó¨ÌïòÍ≥† ÏûàÏäµÎãàÎã§.', date: new Date().toISOString(), expanded: false },
                    { id: generateUniqueId(), category: 'Î¨∏Ìôî', title: 'Ïã†Ïù∏ ÏûëÍ∞Ä, Î¨∏ÌïôÏÉÅ ÏàòÏÉÅ', content: 'Ï†äÏùÄ Ïã†Ïù∏ ÏûëÍ∞ÄÍ∞Ä Í∂åÏúÑ ÏûàÎäî Î¨∏ÌïôÏÉÅÏùÑ ÏàòÏÉÅÌïòÎ©∞ Î¨∏Îã®Ïóê ÏÉàÎ°úÏö¥ Î∞îÎûåÏùÑ Î∂àÏñ¥ÎÑ£Í≥† ÏûàÏäµÎãàÎã§.', date: new Date(Date.now() - 86400000 * 3).toISOString(), expanded: false },
                    { id: generateUniqueId(), category: 'IT', title: 'AI Í∏∞Ïà†, ÏùºÏÉÅÏóê Ïä§Î©∞Îì§Îã§', content: 'Ïù∏Í≥µÏßÄÎä• Í∏∞Ïà†Ïù¥ Ïä§ÎßàÌä∏Ìè∞, Í∞ÄÏ†ÑÏ†úÌíà Îì± Ïö∞Î¶¨ ÏùºÏÉÅ Í≥≥Í≥≥Ïóê ÍπäÏàôÏù¥ Ïä§Î©∞Îì§Í≥† ÏûàÏäµÎãàÎã§.', date: new Date(Date.now() - 86400000 * 0.5).toISOString(), expanded: false },
                    { id: generateUniqueId(), category: 'Ïä§Ìè¨Ï∏†', title: 'Íµ≠Í∞ÄÎåÄÌëúÌåÄ, ÏõîÎìúÏªµ ÏßÑÏ∂ú ÌôïÏ†ï', content: 'Ï∂ïÍµ¨ Íµ≠Í∞ÄÎåÄÌëúÌåÄÏù¥ ÏπòÏó¥Ìïú ÏòàÏÑ† ÎÅùÏóê ÏõîÎìúÏªµ Î≥∏ÏÑ† ÏßÑÏ∂úÏùÑ ÌôïÏ†ï ÏßÄÏóàÏäµÎãàÎã§. Íµ≠ÎØºÎì§Ïùò ÌôòÌò∏Í∞Ä Ïù¥Ïñ¥ÏßÄÍ≥† ÏûàÏäµÎãàÎã§.', date: new Date(Date.now() - 86400000 * 4).toISOString(), expanded: false }
                ];
            }

            if (savedUsers) {
                users = JSON.parse(savedUsers);
            } else {
                users = [];
            }

            if (savedCurrentUser) {
                currentUser = JSON.parse(savedCurrentUser);
                updateAuthUI();
            }
        }

        function formatDateTime(isoString) {
            const date = new Date(isoString);
            const year = date.getFullYear();
            const month = String(date.getMonth() + 1).padStart(2, '0');
            const day = String(date.getDate()).padStart(2, '0');
            const hours = String(date.getHours()).padStart(2, '0');
            const minutes = String(date.getMinutes()).padStart(2, '0');
            return `${year}-${month}-${day} ${hours}:${minutes}`;
        }

        function renderCategories() {
            const categoryNav = document.getElementById('categoryNav');
            categoryNav.innerHTML = '';
            categories.forEach(cat => {
                const button = document.createElement('button');
                button.className = `category-button ${currentCategory === cat.id ? 'active' : ''}`;
                button.textContent = cat.name;
                button.onclick = () => {
                    currentCategory = cat.id;
                    renderCategories();
                    renderArticles(currentCategory);
                };
                categoryNav.appendChild(button);
            });
        }

        function renderArticles(category) {
            const newsList = document.getElementById('newsList');
            newsList.innerHTML = '';

            const filteredArticles = category === 'all'
                ? articles
                : articles.filter(article => article.category === category);

            filteredArticles.sort((a, b) => new Date(b.date) - new Date(a.date));

            if (filteredArticles.length === 0) {
                newsList.innerHTML = `<p style="text-align: center; color: var(--light-text-color);">Ìï¥Îãπ Ïπ¥ÌÖåÍ≥†Î¶¨Ïóê Í∏∞ÏÇ¨Í∞Ä ÏóÜÏäµÎãàÎã§.</p>`;
                return;
            }

            filteredArticles.forEach(article => {
                const articleCard = document.createElement('div');
                articleCard.className = `news-card ${article.expanded ? 'expanded' : ''} ${currentUser && currentUser.isAdmin ? 'admin-mode' : ''}`;
                articleCard.dataset.id = article.id;

                const emoji = categoryEmojis[article.category] || 'üì∞';

                articleCard.innerHTML = `
                    <div class="news-header">
                        <span class="news-emoji">${emoji}</span>
                        <h3 class="news-title editable-title" contenteditable="${currentUser && currentUser.isAdmin ? 'true' : 'false'}" data-field="title">${article.title}</h3>
                    </div>
                    <p class="news-date">Í∏∞ÏÇ¨ÏûÖÎ†•: ${formatDateTime(article.date)}</p>
                    <div class="news-content editable-content" contenteditable="${currentUser && currentUser.isAdmin ? 'true' : 'false'}" data-field="content">${article.content}</div>
                    ${currentUser && currentUser.isAdmin ? `<button class="admin-delete-btn" data-id="${article.id}">ÏÇ≠Ï†ú üóëÔ∏è</button>` : ''}
                `;

                const newsTitle = articleCard.querySelector('.news-title');
                const newsContent = articleCard.querySelector('.news-content');

                // Add click listener to the title for toggling
                newsTitle.addEventListener('click', (e) => {
                    e.stopPropagation(); // Prevent card's click listener from firing
                    // If the title is currently editable (admin mode), clicking should allow editing, not toggle.
                    if (newsTitle.contentEditable === 'true') {
                        return;
                    }
                    // Otherwise, toggle the content visibility
                    article.expanded = !article.expanded;
                    articleCard.classList.toggle('expanded', article.expanded);
                });

                // Existing articleCard click listener, now primarily for clicks on other parts of the card
                articleCard.addEventListener('click', (e) => {
                    // If the click was on the newsTitle, it would have been stopped by its own listener.
                    // This listener handles clicks on other parts of the card (e.g., date, emoji, card background).
                    // We still want to prevent toggling if clicking on editable content or delete button.
                    if (e.target.closest('.editable-content') || e.target.closest('.admin-delete-btn')) {
                        return;
                    }
                    // Toggle if clicked on other non-interactive parts of the card
                    article.expanded = !article.expanded;
                    articleCard.classList.toggle('expanded', article.expanded);
                });

                if (currentUser && currentUser.isAdmin) {
                    const saveChanges = (element, field) => {
                        const newValue = element.textContent.trim();
                        if (article[field] !== newValue) {
                            article[field] = newValue;
                            saveData();
                            renderArticles(currentCategory);
                        }
                    };

                    newsTitle.addEventListener('blur', (e) => saveChanges(e.target, 'title'));
                    newsTitle.addEventListener('keydown', (e) => {
                        if (e.key === 'Enter') {
                            e.preventDefault();
                            e.target.blur();
                        }
                    });

                    newsContent.addEventListener('blur', (e) => saveChanges(e.target, 'content'));

                    const deleteBtn = articleCard.querySelector('.admin-delete-btn');
                    if (deleteBtn) {
                        deleteBtn.addEventListener('click', (e) => {
                            e.stopPropagation();
                            handleDeleteArticle(article.id);
                        });
                    }
                }

                newsList.appendChild(articleCard);
            });
        }

        function updateAuthUI() {
            const authButtons = document.getElementById('authButtons');
            const adminControls = document.getElementById('adminControls');
            const loggedInUserSpan = document.getElementById('loggedInUser');

            if (currentUser) {
                authButtons.style.display = 'none';
                adminControls.style.display = 'flex';
                loggedInUserSpan.textContent = `${currentUser.id}Îãò ÌôòÏòÅÌï©ÎãàÎã§!`;
                if (currentUser.isAdmin) {
                    loggedInUserSpan.textContent = `Í¥ÄÎ¶¨Ïûê (${currentUser.id})Îãò ÌôòÏòÅÌï©ÎãàÎã§!`;
                }
            } else {
                authButtons.style.display = 'flex';
                adminControls.style.display = 'none';
            }
            renderArticles(currentCategory);
        }

        function showModal(modalId) {
            document.getElementById(modalId).classList.add('active');
        }

        function hideModal(modalId) {
            document.getElementById(modalId).classList.remove('active');
        }

        function showLoginModal() {
            showModal('loginModal');
            document.getElementById('loginMessage').style.display = 'none';
            document.getElementById('loginId').value = '';
            document.getElementById('loginPw').value = '';
        }

        function hideLoginModal() {
            hideModal('loginModal');
        }

        function showCreateArticleModal() {
            if (!currentUser || !currentUser.isAdmin) return;
            showModal('createArticleModal');
            document.getElementById('createArticleMessage').style.display = 'none';
            document.getElementById('articleCategoryInput').value = '';
            document.getElementById('articleCategoryValue').value = '';
            document.getElementById('articleTitle').value = '';
            document.getElementById('articleContent').value = '';
        }

        function hideCreateArticleModal() {
            hideModal('createArticleModal');
        }

        function showCategoryPicker(input) {
            input.blur();
            currentCategoryTargetInput = input;
            const categoryPickerModal = document.getElementById('categoryPickerModal');
            const categoryPickerOptions = document.getElementById('categoryPickerOptions');
            categoryPickerOptions.innerHTML = '';

            categories.filter(cat => cat.id !== 'all').forEach(cat => {
                const button = document.createElement('button');
                button.className = 'category-button';
                button.textContent = cat.name;
                button.onclick = () => selectCategory(cat.id, cat.name);
                categoryPickerOptions.appendChild(button);
            });

            showModal('categoryPickerModal');
        }

        function hideCategoryPicker() {
            hideModal('categoryPickerModal');
            if (currentCategoryTargetInput) {
                currentCategoryTargetInput.blur();
                currentCategoryTargetInput = null;
            }
            document.activeElement.blur();
        }

        function selectCategory(categoryId, categoryName) {
            if (currentCategoryTargetInput) {
                currentCategoryTargetInput.value = categoryName;
                document.getElementById('articleCategoryValue').value = categoryId;
            }
            hideCategoryPicker();
        }

        document.getElementById('loginForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const id = document.getElementById('loginId').value;
            const pw = document.getElementById('loginPw').value;
            const loginMessage = document.getElementById('loginMessage');

            if (id === 'admin' && pw === 'qwe121') {
                currentUser = { id: 'admin', isAdmin: true };
                loginMessage.className = 'message success';
                loginMessage.textContent = 'Í¥ÄÎ¶¨Ïûê Î°úÍ∑∏Ïù∏ ÏÑ±Í≥µ!';
                loginMessage.style.display = 'block';
                setTimeout(() => {
                    hideLoginModal();
                    updateAuthUI();
                    saveData();
                }, 1000);
                return;
            }

            const user = users.find(u => u.id === id && u.pw === pw);
            if (user) {
                currentUser = { id: user.id, isAdmin: false };
                loginMessage.className = 'message success';
                loginMessage.textContent = 'Î°úÍ∑∏Ïù∏ ÏÑ±Í≥µ!';
                loginMessage.style.display = 'block';
                setTimeout(() => {
                    hideLoginModal();
                    updateAuthUI();
                    saveData();
                }, 1000);
            } else {
                loginMessage.className = 'message error';
                loginMessage.textContent = 'ÏïÑÏù¥Îîî ÎòêÎäî ÎπÑÎ∞ÄÎ≤àÌò∏Í∞Ä Ïò¨Î∞îÎ•¥ÏßÄ ÏïäÏäµÎãàÎã§.';
                loginMessage.style.display = 'block';
            }
        });

        document.getElementById('logoutBtn').addEventListener('click', function() {
            currentUser = null;
            saveData();
            updateAuthUI();
        });

        document.getElementById('createArticleForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const categoryId = document.getElementById('articleCategoryValue').value;
            const title = document.getElementById('articleTitle').value;
            const content = document.getElementById('articleContent').value;
            const createArticleMessage = document.getElementById('createArticleMessage');

            if (!categoryId || !title || !content) {
                createArticleMessage.className = 'message error';
                createArticleMessage.textContent = 'Î™®Îì† ÌïÑÎìúÎ•º Ï±ÑÏõåÏ£ºÏÑ∏Ïöî.';
                createArticleMessage.style.display = 'block';
                return;
            }

            const newArticle = {
                id: generateUniqueId(),
                category: categoryId,
                title,
                content,
                date: new Date().toISOString(),
                expanded: false
            };
            articles.push(newArticle);
            saveData();
            createArticleMessage.className = 'message success';
            createArticleMessage.textContent = 'Í∏∞ÏÇ¨Í∞Ä ÏÑ±Í≥µÏ†ÅÏúºÎ°ú Ï∂îÍ∞ÄÎêòÏóàÏäµÎãàÎã§!';
            createArticleMessage.style.display = 'block';
            setTimeout(() => {
                hideCreateArticleModal();
                renderArticles(currentCategory);
            }, 1000);
        });

        function handleDeleteArticle(articleId) {
            if (!confirm('Ï†ïÎßêÎ°ú Ïù¥ Í∏∞ÏÇ¨Î•º ÏÇ≠Ï†úÌïòÏãúÍ≤†ÏäµÎãàÍπå?')) return;
            articles = articles.filter(article => article.id !== articleId);
            saveData();
            renderArticles(currentCategory);
        }

        document.addEventListener('DOMContentLoaded', () => {
            loadData();
            renderCategories();
            renderArticles(currentCategory);
            updateAuthUI();

            document.getElementById('appTitle').addEventListener('click', showLoginModal);
            document.getElementById('createArticleBtn').addEventListener('click', showCreateArticleModal);
        });
    </script>
</body>
